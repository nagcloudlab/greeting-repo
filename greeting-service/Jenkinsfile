pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                 git branch: 'main', url: 'https://github.com/nagcloudlab/greeting-repo'
            }
        }
        stage('Compile') {
            steps {
             dir('greeting-service'){
                bat '.\\mvnw clean compile'
             }
            }
        }
        stage('Unit-Testing') {
            steps {
                bat '.mvnw test'
            }
        }
        stage('Integration') {
            steps {
                echo 'Integration Testing'
            }
        }
        stage('Package') {
            steps {
                echo '.mvnw package'
            }
        }
    }
}